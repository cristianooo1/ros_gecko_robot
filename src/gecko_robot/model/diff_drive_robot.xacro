<?xml version='1.0'?>

<robot name="gecko_robot" xmlns:xacro="http://www.ros.org/wiki/xacro">

  <xacro:include filename="/home/cristianooo/jazzy_ros2_robostack/src/gecko_robot/model/diff_drive_robot.gazebo" />
  <xacro:include filename="/home/cristianooo/jazzy_ros2_robostack/src/gecko_robot/model/materials.xacro" />
  <xacro:include filename="/home/cristianooo/jazzy_ros2_robostack/src/gecko_robot/model/xacro_variables.xacro" />

<!--Links Declaration-->

<link name="base_footprint"> 
    <inertial>
        <mass value="0.0001"/>
        <origin xyz="0 0 0"/>
        <inertia ixx="0.0001" ixy="0.0" ixz="0.0"
                iyy="0.0001" iyz="0.0" 
                izz="0.0001"/>
    </inertial>
</link>

<joint name="body_link_joint" type="fixed">
    <parent link="base_footprint"/>
    <child link="base_link"/>
</joint>

<link name="base_link">
    <visual>
        <geometry>
            <box size = "0.3 0.3 0.3"/>
        </geometry>
        <origin rpy="0 0 0" xyz="0 0 0.2"/>
        <material name="black"/>
    </visual>
    <collision>
        <geometry>
            <box size="0.3 0.3 0.3"/>
        </geometry>
        <origin rpy="0 0 0" xyz="0 0 0"/>
    </collision>
    
    <inertial>
        <mass value="5.0"/>
        <origin xyz="0 0 0"/>
        <inertia ixx="0.0395" ixy="0.0" ixz="0.0"
                iyy="0.0395" iyz="0.0" 
                izz="0.0395"/>
    </inertial>
</link>


<link name="left_wheel">
    <visual>
        <origin xyz="${wheel_x} ${wheel_y} ${wheel_z}" rpy="${wheel_r} ${wheel_p} ${wheel_ya}"/>
        <geometry>
            <cylinder radius="${wheel_cylinder_radius}" length="${wheel_cylinder_height}"/>
        </geometry>
        <material name="black"/>
    </visual>
    <collision>
        <origin xyz="0 0 0" rpy="${wheel_r} ${wheel_p} ${wheel_ya}"/>
        <geometry>
            <cylinder radius="${wheel_cylinder_radius}" length="${wheel_cylinder_height}"/>
        </geometry>
    </collision>
    
    <inertial>
        <mass value="1.0"/>
        <origin xyz="0 0 0"/>
        <inertia ixx="0.01" ixy="0.0" ixz="0.0"
                iyy="0.01" iyz="0.0" 
                izz="0.01"/>
    </inertial>
</link>


<link name="right_wheel">
    <visual >
        <origin xyz="${wheel_x} ${wheel_y} ${wheel_z}" rpy="${wheel_r} ${wheel_p} ${wheel_ya}"/>
        <geometry>
            <cylinder radius="${wheel_cylinder_radius}" length="${wheel_cylinder_height}"/>
        </geometry>
        <material name="black"/>
    </visual>

    <collision>
        <origin xyz="0 0 0" rpy="${wheel_r} ${wheel_p} ${wheel_ya}"/>
        <geometry>
            <cylinder radius="${wheel_cylinder_radius}" length="${wheel_cylinder_height}"/>
        </geometry>
    </collision>
    
    <inertial>
        <mass value="1.0"/>
        <origin xyz="0 0 0"/>
        <inertia ixx="0.01" ixy="0.0" ixz="0.0"
                iyy="0.01" iyz="0.0" 
                izz="0.01"/>
    </inertial>
</link>


<!--Joint Declaration-->

  <joint type="continuous" name="left_wheel_hinge">
    <origin xyz="${left_wheel_x} ${left_wheel_y} ${left_wheel_z}" rpy="0 0 0"/>
    <child link="left_wheel"/>
    <parent link="base_link"/>
    <axis xyz="0 1 0" rpy="0 0 0"/>
    <limit effort="100" velocity="100"/>
    <joint_properties damping="0.0" friction="0.0"/>
  </joint>

  <joint type="continuous" name="right_wheel_hinge">
    <origin xyz="${right_wheel_x} ${right_wheel_y} ${right_wheel_z}" rpy="0 0 0"/>
    <child link="right_wheel"/>
    <parent link="base_link"/>
    <axis xyz="0 1 0" rpy="0 0 0"/>
    <limit effort="100" velocity="100"/>
    <joint_properties damping="0.0" friction="0.0"/>
  </joint>


</robot>